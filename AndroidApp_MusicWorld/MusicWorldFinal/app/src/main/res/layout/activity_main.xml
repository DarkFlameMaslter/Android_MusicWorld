<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/night_city"


    tools:context=".MainActivity">

    <RelativeLayout

        android:id="@+id/MainUserView"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@color/whale_blue"
        android:fadingEdge="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="25dp"
            app:cardCornerRadius="50dp">

            <ImageView
                android:id="@+id/userAvata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/wlh" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/Main_welcomeUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/cardView"
            android:fontFamily="@font/mto_chancery"
            android:text="@string/forDevpp"
            android:textColor="@color/white"
            android:textSize="30dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/MainToLib"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="20dp"
        android:background="@color/whale_blue"
        android:clickable="true"
        android:fontFamily="@font/mto_chancery"
        android:paddingStart="10dp"
        android:text="@string/MainToLib"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textSize="25dp"
        tools:ignore="TextContrastCheck,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/getMusicBoard"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_below="@+id/MainToLib"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@color/whale_blue"
        android:clickable="true"
        android:fontFamily="@font/mto_chancery"
        android:paddingStart="10dp"
        android:text="@string/toMusicBoard"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textSize="25dp"
        tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />

    <TextView
        android:id="@+id/upLoadSongButton"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_below="@+id/getMusicBoard"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@color/whale_blue"
        android:clickable="true"
        android:fontFamily="@font/mto_chancery"
        android:paddingStart="10dp"
        android:text="@string/toUploadingSong"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textSize="25dp"
        tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:clickable="true"
        app:srcCompat="@drawable/logout"
        tools:ignore="SpeakableTextPresentCheck" />

</RelativeLayout>